/* pages/user/user.wxss */
.user_info{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 80rpx;
  font-size: 30rpx;
}
.user_info image{
  width: 160rpx;
  height: 160rpx;
  margin-top: 10rpx;
  margin-right: 60rpx;
}
.user_add_title{
  font-size: 36rpx;
  margin-bottom: 40rpx;
}
.user_addr_item{
   width:100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    border-bottom:1px solid #ddd;
    padding:10rpx 40rpx;
    vertical-align: middle;
    line-height: 48rpx;
    font-size:30rpx;
    box-sizing:border-box;
    position: relative;
}
user_addr_item .addr_sub {
  width:580rpx;
  display:block;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.addr_edit{
    width:100rpx;
    line-height: 40px;
    background-position: center;
    background-size:100%;
    text-align: right;  
}
.user_addr_manage{
  width: 100%;
}
.user_add_title{
  text-align: center;
}
navigator{
  margin: 0rpx 0 20rpx;
  padding: 30rpx;
  border-bottom: 1px solid #ddd;
  font-size: 32rpx;
  text-align: center;
  color: #d24a58;
}